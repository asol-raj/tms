        <h3>Access Restricted</h3>
    </div>

    <div class="card-body text-center">
        <p class="mt-3">
            We sincerely regret that you do not have the required permissions to access this page.
            Please contact your administrator if you believe this access is necessary.
        </p>

        <p class="footer-note mb-4">
            You will be redirected automatically in
            <span class="countdown fw-bold" id="seconds">15</span> seconds.
        </p>

        <button class="btn btn-outline-primary px-4" onclick="history.back()">
            â¬… Go Back
        </button>
    </div>
</div>


<script>
    let secondsLeft = 15;

    function updateCountdown() {
        const el = document.getElementById("seconds");
        if (!el) return;

        el.textContent = secondsLeft;

        if (secondsLeft <= 0) {
            window.location.href = '/auth/dashboard'; // Redirect after 15 seconds
        } else {
            secondsLeft--;
            setTimeout(updateCountdown, 1000);
        }
    }

    window.onload = updateCountdown;
</script>

